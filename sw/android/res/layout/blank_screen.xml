<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false">
    <Spinner 	
		android:id="@+id/device_spinner" 
		android:prompt="@string/spinner_prompt"
		android:layout_height = "50dp"
		android:layout_width="fill_parent"
		android:layout_gravity="center"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="@drawable/spinner_look"
		android:textColor="#FFFFFF" >
	</Spinner>		
	
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="@string/blank_screen" android:layout_gravity="center" android:textSize="20sp"
		android:paddingTop="20dp" android:paddingLeft="20dp" android:paddingRight="20dp"> 
	</TextView>
	
	<ImageView android:src="@drawable/right_circle_two" android:layout_width="50dp"
			android:layout_height="20dp" android:layout_marginTop="5dp"
			android:scaleType="fitXY" android:layout_gravity="center_horizontal"
			android:visibility="invisible" 
	></ImageView>	
</LinearLayout>
