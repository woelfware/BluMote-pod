<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="fill_parent"
	android:padding="10dip" android:orientation="vertical">
	
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:text="Enter a name for the activity"			
	/>
	<EditText android:id="@+id/activity_name" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:textSize="20sp" />
		
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:text="Select a graphic"			
	/>
	<Gallery 
	    android:id="@+id/activity_gallery" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" />
	
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
			android:text="Optionally adjust button configuration"			
	/>
	<Spinner 	
		android:id="@+id/activity_layout_spinner" 
		android:prompt="@string/layout_spinner"
		android:layout_height = "50dp"
		android:layout_width="200dp"
		android:layout_gravity="center"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_marginBottom="10dp"
		android:background="@drawable/spinner_look"
		android:textColor="#FFFFFF" >
	</Spinner>	
	    
	<Button android:id="@+id/activity_enter_button" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:text="Enter" />
</LinearLayout>
