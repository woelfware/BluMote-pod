<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >
    <LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_gravity="center" >     
		<ImageButton android:id="@+id/move_left_btn" android:layout_marginRight="200dp" android:background="@drawable/move_left" android:layout_width="60dp" android:layout_height="50dp" android:scaleType="fitXY" android:visibility="invisible"/>	
		<ImageButton android:id="@+id/move_right_btn" android:background="@drawable/move_right" android:layout_width="60dp" android:layout_height="50dp" android:scaleType="fitXY"/>
	</LinearLayout>			
    <TextView android:id="@+id/activities_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Activities"
        android:background="#666"
        android:textColor="#fff"
        android:paddingLeft="5dp"
        android:textSize="21sp"
    />
    <ListView android:id="@+id/activities_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
    />
    <Button
      	android:id="@+id/add_activity_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:text="Add new activity"       
    />
</LinearLayout>