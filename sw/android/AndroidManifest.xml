<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.woelfware.droidmote"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:label="@string/app_name" android:debuggable="true" android:icon="@drawable/bluemote">
        <activity android:name=".Droidmote"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

	<activity android:name=".DeviceListActivity" />    
    <activity android:name=".ManageDevices" />

<activity android:theme="@android:style/Theme.Dialog" android:label="@string/enter_device_title" android:name=".EnterDevice"></activity>
</application>



<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>
<uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
<uses-sdk android:targetSdkVersion="10" android:minSdkVersion="5"></uses-sdk>
</manifest> 