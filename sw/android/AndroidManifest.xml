<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      package="com.woelfware.blumote" android:versionName="0.11.10.8">
    <application android:label="@string/app_name" android:debuggable="true" android:icon="@drawable/bluemote">
        <activity android:name="BluMote"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<activity android:name="MyPreferences" android:screenOrientation="portrait"/>
		<activity android:name="PodListActivity" android:screenOrientation="portrait"/>    
		<activity android:name="ManageDevices" android:screenOrientation="portrait"/>
		
		<activity android:theme="@android:style/Theme.Dialog" android:label="New Device" android:name="EnterDevice" android:screenOrientation="portrait"></activity>
		<activity android:theme="@android:style/Theme.Dialog" android:label="New Activity" android:name="CreateActivity" android:screenOrientation="portrait"></activity>
		<activity android:name="ActivityInitEdit" android:screenOrientation="portrait"></activity>
		<activity android:name=".EnterName" android:theme="@android:style/Theme.Dialog" android:label="Rename Misc Button"></activity>
	</application>

	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>
	<uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-sdk android:targetSdkVersion="10" android:minSdkVersion="5"></uses-sdk>
</manifest> 